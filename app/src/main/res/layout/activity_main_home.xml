<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".aktivitas.MainHome">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_dzikir_png"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-27dp"
        android:text="E-Dhikr"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button_register"
        android:id="@+id/btnRegisterMainHome"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button_login"
        android:id="@+id/btnLoginMainHome"/>

</LinearLayout>